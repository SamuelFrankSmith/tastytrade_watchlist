<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TastyTradeWatchlists" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="Font.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">24sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="Font.Body" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Font.Subtitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="Font.Value" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">100</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="Font.Error" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontWeight">600</item>
        <item name="android:textColor">@color/scaryRed</item>
    </style>

    <style name="EditText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:layout_margin">@dimen/marginM</item>
        <item name="android:padding">@dimen/marginS</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Button">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">@dimen/marginM</item>
        <item name="android:padding">@dimen/marginS</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:gravity">center</item>
    </style>

</resources>